Algoritmo problema_2
	// Enunciado: Hallar el cociente y residuo de dos numeros enteros
	
	// Declaraciones
	Definir num1, num2 Como Entero;
	Definir cociente, residuo Como Real;
	
	// Inputs
	Escribir "Ingrese un primer numero";
	Leer num1;
	Escribir "Ingrese un segundo numero";
	Leer num2;
	
	// Proceso
	cociente = num1 / num2;
	residuo = num1 % num2;
	
	// Salida
	Escribir "El cociente de la operación es: ", cociente, ". El residuo es: ", residuo, ".";
	
FinAlgoritmo
	